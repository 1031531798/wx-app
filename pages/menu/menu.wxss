/* pages/menu.wxss */
page{
  width: 100%;
  height: 100%;
}
.menu-index{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.shopping-background{
  width: 100%;
  height: 100%;
  opacity: 0.5;
  background: linear-gradient(to right, #C04848, #480048); /* Chrome 10-25, Safari 5.1-6 */
  filter: blur(5px);
  position: absolute;
  z-index: -20;
}
.menu-header{
  height: 10px;
}
.header-img{
  width: 100%;
  height: 100%;
}
.menu-content{
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-grow: 1;
  width: 100%;
  height: 0;
}
.menu-body{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.menu-left{
  width: 100px;
  height: 100%;
}
.menu-body-item{
  flex-grow: 1;
  margin-bottom: 2px;
  margin: 10px 10px;
}
.menu-body-item .van-card {
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 5px;
  padding: 8px 16px 8px 5px;
}
.menu-body-item-image{
  position: relative;
  left: 5px;
}
.menu-body-item-image .van-image__img{
  border: 0px solid;
  border-radius: 5px;
}
.menu-body-group-title{
  text-align: left;
  font-weight: 500;
  padding: 5px 10px;
  color: #26001b;
}
.shopping{
  display: flex;
  flex-direction: column;
  padding-top: 50px;
}
.shopping-body{
  display: grid;
  grid-template-columns: 60px auto 100px;
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 100;
}
.shopping-icon{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 40px;
  background-color: tan;
  border: 0px solid tan;
  border-radius: 5px;
}
.shopping-btn{
  width: 100px;
}
.shopping-price{
  display: flex;
  align-items: center;
  color: red;
  font-size: 50rpx;
  flex: 1;
  padding-left: 50rpx;
}
.order-item-btn-group{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  text-align: end;
}
.order-item-btn{
  border-radius: 50%;
  border: 0px solid;
  background-color: rgba(241, 210, 30,0.5);
  font-size: 14px;
  color: rgb(24, 24, 24);
  width: 20px;
  height: 20px;
}
.order-item-btn-call{
  border-radius: 50%;
  border: 0px solid;
  font-size: 14px;
  background-color: rgba(250, 250, 249, 0.911);
  color: rgb(24, 24, 24);
  width: 20px;
  height: 20px;
}
.order-item-price{
  margin: 0 20rpx;
  font-size: 13px;
  font-weight: 600;
}
.shopping-detail{
  position: absolute;
  width: 100%;
  z-index: 99;
  max-height: 80%;
  bottom: 44px;
  display: flex;
}
.shopping-body-add{
  position: relative;
  width: 100%;
  padding-bottom: 40px;
  z-index: 99;
  max-height: 300px;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-bottom: none;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.shopping-body-add-item{
  width: 100%;
  display: grid;
  grid-template-columns: 80px auto;
  margin: 10px;
  border-bottom: 1px solid gainsboro;
}
.shopping-shade{
  width: 100%;
  height: 100%;
  background-color: #515a6e;
  opacity: 0.5;
  position: absolute;
  z-index: 20;
}
.van-leave-active-class{
  width: 100%;
}
.item-desc{
  color: #646566;
  line-height: 20px;
  font-size: 14px;
}
.item-price{
  color: #ee0a24;
  font-size: 16px;
  font-weight: 500;
}
.shopping-detail-footer{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-right: 20px;
}

