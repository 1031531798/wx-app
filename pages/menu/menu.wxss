/* pages/menu.wxss */
page{
  width: 100%;
  height: 100%;
}
.menu-index{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.menu-header{
  height: 150px;
}
.header-img{
  width: 100%;
  height: 100%;
}
.menu-content{
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-grow: 1;
  width: 100%;
  height: 0;
}
.menu-body{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.menu-left{
  width: 100px;
  height: 100%;
}
.menu-body-item{
  width: 100%;
  margin-bottom: 2px;
}
.shopping-body{
  display: grid;
  grid-template-columns: 60px auto 100px;
  width: 100%;
  height: 44px;
  background-color: tan;
}
.shopping-image{
  display: flex;
  align-items: center;
  width: 100rpx;
  height: 100%;
  margin-left: 10px;
}
.shopping-btn{
  width: 100px;
}
.shopping-price{
  display: flex;
  align-items: center;
  color: red;
  font-size: 50rpx;
  flex: 1;
  padding-left: 50rpx;
}
.order-item-btn-group{
  text-align: end;
}
.order-item-btn{
  border-radius: 50%;
  background-color: rgb(251, 226, 81);
  font-size: 14px;
  color: white;
  width: 20px;
  height: 20px;
}
