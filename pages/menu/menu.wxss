/* pages/menu.wxss */
page{
  width: 100%;
  height: 100%;
}
.menu-index{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  width: 100%;
  height: 100%;
}
.menu-header{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.header-img{
  width: 100%;
  height: 200rpx;
}
.menu-content{
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-grow: 1;
}
.menu-body{
  display: flex;
  height: 100%;
  flex-grow: 1;
}
.menu-left{
  display: flex;
  width: 220rpx;
  height: 100%;
}
.menu-nav{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  background-color: rgb(243, 243, 243);
  color: #333333;
}
.menu-nav-hover{
  display: flex;
  background-color: white;
  color: #FF6A00;
  font-weight: 500;
}