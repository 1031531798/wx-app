/* pages/menu.wxss */
page{
  width: 100%;
  height: 100%;
}
.menu-index{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.menu-header{
  height: 150px;
}
.header-img{
  width: 100%;
  height: 100%;
}
.menu-content{
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-grow: 1;
  width: 100%;
  height: 0;
}
.menu-body{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.menu-left{
  width: 100px;
  height: 100%;
}
.menu-body-item{
  width: 100%;
  margin-bottom: 2px;
}
.shopping{
  display: flex;
  flex-direction: column;
}
.shopping-body{
  display: grid;
  grid-template-columns: 60px auto 100px;
  width: 100%;
  height: 44px;
  background-color: tan;
  position: relative;
  z-index: 100;
}
.shopping-image{
  display: flex;
  align-items: center;
  width: 100rpx;
  height: 100%;
  margin-left: 10px;
}
.shopping-btn{
  width: 100px;
}
.shopping-price{
  display: flex;
  align-items: center;
  color: red;
  font-size: 50rpx;
  flex: 1;
  padding-left: 50rpx;
}
.order-item-btn-group{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  text-align: end;
}
.order-item-btn{
  border-radius: 50%;
  border: 1px solid rgb(241, 210, 30);
  background-color: rgb(241, 210, 30);
  font-size: 14px;
  color: rgb(24, 24, 24);
  width: 20px;
  height: 20px;
}
.order-item-btn-call{
  border-radius: 50%;
  border: 1px solid;
  border-color: rgb(241, 210, 30);
  font-size: 14px;
  color: rgb(24, 24, 24);
  width: 20px;
  height: 20px;
}
.order-item-price{
  margin: 0 20rpx;
  font-size: 13px;
  font-weight: 600;
}
.shopping-detail{
  position: absolute;
  width: 100%;
  z-index: 99;
  max-height: 80%;
  bottom: 44px;
  
  display: flex;
}
.shopping-body-add{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: pink;
  border-bottom: none;
  border-top-left-radius: 30rpx;
border-top-right-radius: 30rpx;
}
.shopping-body-add-item{
  width: 100%;
  display: grid;
  grid-template-columns: 80px auto;
  margin: 10px;
  border-bottom: 1px solid gainsboro;
}
.van-leave-active-class{
  width: 100%;
}
.item-desc{
  color: #646566;
  line-height: 20px;
  font-size: 14px;
}
.item-price{
  color: #ee0a24;
  font-size: 16px;
  font-weight: 500;
}
.shopping-detail-footer{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-right: 20px;
}
